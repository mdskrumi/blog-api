model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName     String?
  lastName      String?
  Blog          Blog[]
  BlogReference BlogReference[]

  @@map("users")
}

model Blog {
  id Int @id @default(autoincrement())

  title     String
  body      String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  readCount Int      @default(0)

  user          User            @relation(fields: [userId], references: [id])
  userId        Int
  BlogReference BlogReference[]

  @@map("blogs")
}

model BlogReference {
  id Int @id @default(autoincrement())

  title String?
  url   String

  blog   Blog @relation(fields: [blogId], references: [id])
  blogId Int

  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@map("blog_references")
}
